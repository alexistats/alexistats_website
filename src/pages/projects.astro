---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Tools</div>
  </div>

  <HorizontalCard
    title="TastyTools"
    img="/proj_tastytools_img.webp"
    desc="Tired of cluttered recipes online? try pasting a recipe URL to TastyTools for a minimalist and practical experience. (Currently works with recipes from Allrecipe)"
    url="https://tastytools.app/"
    badge="NEW"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Websites</div>
  </div>

  <HorizontalCard
    title="Astro Tutorial Website"
    img="/proj_astro_img.webp"
    desc="The website created after completing the Astro Tutorial"
    url="https://quiet-genie-63ec27.netlify.app/"
    badge="Website"
  />
</BaseLayout>
